  <div class="tab-content devicen">
  <div class="tab-pane active fade in" id="login-block">
    <!-- Login Block Form -->
    <div class="login-block-form">       
          <h2 class="padfornav">Editar cuenta <%= resource_name.to_s.humanize %></h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field form-group">
              <%= f.label :Correo %><br />
              <%= f.email_field :email, autofocus: true, :placeholder => "Introduce Correo", :class => 'form-control' %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field form-group">
              <%= f.label :contraseña %> <i>(dejalo en blanco si no quieres cambiarla)</i><br />
              <%= f.password_field :password, autocomplete: "off" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> caracteres minimo</em>
              <% end %>
            </div>

            <div class="field form-group">
              <%= f.label :confirmar_contraseña %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>

            <div class="field form-group">
              <%= f.label :contraseña_actual %> <i>(necesitamos tu contraseña actual para realizar cambios)</i><br />
              <%= f.password_field :current_password, autocomplete: "off" %>
            </div>

            <div class="actions">
              <%= f.submit "Actualizar" %>
            </div>
          <% end %>

          <h3>Cancelar mi cuenta</h3>

          <p> Lamentamos que ya no apoyes nuestra causa <%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "Este proceso ya no se puede para cuando des click, ¿seguro?" }, method: :delete %></p>

          <%= link_to "Atras", :back %>
         </div>
   </div>
</div>
